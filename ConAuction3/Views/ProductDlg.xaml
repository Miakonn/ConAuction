<Window x:Class="ConAuction3.Views.ProductDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product" Height="350"  Width="800"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <WrapPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10,15,15,10">
            <Button IsDefault="True" Name="btnDialogOk" Click="OnClick" MinWidth="60" Margin="10,0,10,0">_Ok</Button>
            <Button IsCancel="True" MinWidth="60">_Cancel</Button>
        </WrapPanel>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0"  HorizontalAlignment="Stretch" >
                <StackPanel Margin="10,5,10,5">
                    <Label Content="Id" />
                    <TextBox  Name="Label" IsReadOnly="true" MinWidth="75" />
                </StackPanel>
                <StackPanel Margin="10,5,10,5">
                    <Label Content="Typ" />
                    <TextBox  Name="Type"  MinWidth="100" />
                </StackPanel>
                <StackPanel Margin="10,5,10,5">
                    <Label Content="Ägare" />
                    <TextBox Name="Customer" IsReadOnly="true" />
                </StackPanel>
            </DockPanel>

            <DockPanel Grid.Row="1"  HorizontalAlignment="Stretch" >
                <StackPanel Margin="10,5,10,5">
                    <Label Content="Namn" />
                    <TextBox  Name="ProductName" MinWidth="400" />
                </StackPanel>
                <StackPanel Margin="10,5,10,5">
                    <Label Content="Loppispris" />
                    <TextBox  Name="FixedPrice" PreviewTextInput="FixedPrice_OnPreviewTextInput" MinWidth="100" />
                </StackPanel>
                <StackPanel Margin="10,5,10,5">
                    <Label Content="Notering" />
                    <TextBox Name="Note" />
                </StackPanel>
            </DockPanel>

            <StackPanel Grid.Row="2"  HorizontalAlignment="Stretch"  Margin="10,5,10,5">
                <Label  Content="Beskrivning" />
                <TextBox  Name="Description" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" MinHeight="80" />
            </StackPanel>


        </Grid>
    </DockPanel>
</Window>
