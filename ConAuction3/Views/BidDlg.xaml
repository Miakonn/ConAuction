<Window x:Class="ConAuction3.Views.BidDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bud" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Background="#FBD800">
	<Grid Margin="15">
		<Grid.RowDefinitions>
			<RowDefinition Height="30" />
			<RowDefinition Height="30" />
			<RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />

		</Grid.RowDefinitions>
		<Label Grid.Row="0" Content="ObjektNr" />
        <TextBox Grid.Row="1" Name="ProductId" MinWidth="250" />
		<Label Grid.Row="2" Content="Maxbud" />
        <TextBox Grid.Row="3" Name="MaxBid" MinWidth="250" />

<WrapPanel Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,15,0,0">
			<Button IsDefault="True" Name="btnDialogOk" Click="OnClick" MinWidth="60" Margin="0,0,10,0">_Ok</Button>
			<Button IsCancel="True" MinWidth="60">_Cancel</Button>
		</WrapPanel>
	</Grid>
</Window>
